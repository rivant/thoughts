<p style="color: green"><%= notice %></p>

<p>
  Post: "<%= @post.content %>"
</p>
<p>
  By: <%= @post.user.name.capitalize %>
</p>

<div>
  <%= link_to "Edit this post", edit_post_path(@post) %> |
  <%= link_to "All posts", posts_path %>

  <%= button_to "Delete this post", @post, method: :delete %>
</div>
